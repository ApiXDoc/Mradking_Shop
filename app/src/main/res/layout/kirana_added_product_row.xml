<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:src="@mipmap/otp_verification_back"
                    android:id="@+id/product_image"
                    ></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Store Name "
                        android:fontFamily="@font/baloo"
                        android:textSize="17dp"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/prodct_name"
                        ></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MRP : "
                                android:layout_marginLeft="15dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_90" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <TextView
                                android:id="@+id/mrp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 0"
                                android:textStyle="bold"
                                android:layout_marginRight="25dp"/>

                        </LinearLayout>





                </LinearLayout>

                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salling Price : "
                                android:layout_marginLeft="15dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_90" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <TextView
                                android:id="@+id/salling_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 0"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:layout_marginRight="25dp"/>

                        </LinearLayout>




                             <LinearLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:orientation="horizontal"
                                 android:padding="5dp">


                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Savings  : "
                                     android:layout_marginLeft="15dp"
                                     android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                     android:textColor="@color/grey_90" />
                                 <View
                                     android:layout_width="0dp"
                                     android:layout_height="0dp"
                                     android:layout_weight="1" />
                                 <TextView
                                     android:id="@+id/saving_price"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="$ 0"
                                     android:textColor="@color/colorAccent"
                                     android:textStyle="bold"
                                     android:layout_marginRight="25dp"/>

                             </LinearLayout>

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:padding="5dp">


                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Weight : "
                                 android:layout_marginLeft="15dp"
                                 android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                 android:textColor="@color/grey_90" />
                             <View
                                 android:layout_width="0dp"
                                 android:layout_height="0dp"
                                 android:layout_weight="1" />
                             <TextView
                                 android:id="@+id/weight"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="$ 0"
                                 android:textStyle="bold"
                                 android:layout_marginRight="25dp"/>

                         </LinearLayout>


                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:orientation="horizontal"
                             android:padding="5dp">


                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Stock : "
                                 android:layout_marginLeft="15dp"
                                 android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                 android:textColor="@color/grey_90" />
                             <View
                                 android:layout_width="0dp"
                                 android:layout_height="0dp"
                                 android:layout_weight="1" />
                             <TextView
                                 android:id="@+id/stock"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="$ 0"
                                 android:textStyle="bold"
                                 android:layout_marginRight="25dp"/>

                         </LinearLayout>



                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:padding="5dp"
                             android:id="@+id/varition_lay"
                             >


                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Variation : "
                                 android:layout_marginLeft="15dp"
                                 android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                 android:textColor="@color/grey_90" />
                             <View
                                 android:layout_width="0dp"
                                 android:layout_height="0dp"
                                 android:layout_weight="1" />
                             <TextView
                                 android:id="@+id/varition"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="$ 0"
                                 android:textStyle="bold"
                                 android:layout_marginRight="25dp"/>

                         </LinearLayout>


                     </LinearLayout>




            </LinearLayout>



            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:shrinkColumns="*"
                        android:stretchColumns="*"
                        android:id="@+id/tableLayout"
                        android:background="#ffffff">



                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <TextView

                                android:text="Serial No"
                                android:layout_weight="1"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/heading"
                                android:text="Weight"
                                android:layout_weight="1"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:gravity="center"/>

                            <TextView

                                android:text="Mrp"
                                android:layout_weight="1"
                                android:background="#d3d3d3"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:gravity="center"/>

                            <TextView

                                android:text="Selling"
                                android:layout_weight="1"
                                android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:gravity="center"/>

                            <TextView

                                android:text="Stock"
                                android:layout_weight="1"
                                android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:gravity="center"/>

                        </TableRow>

                        <!-- Row 3 with 3 columns -->


                        <TableRow

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/row1"
                            android:visibility="gone"
                            >
                            <TextView
                                android:text="1"
                                android:layout_weight="1"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"

                                android:gravity="center"/>


                            <TextView
                                android:text=""
                                android:layout_weight="1"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:id="@+id/weight_1"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/mrp1"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#d3d3d3"
                                android:gravity="center"
                                android:padding="5dip"
                                android:text=""
                                android:textColor="#000000" />

                            <TextView

                                android:id="@+id/selling1"
                                android:layout_weight="1" android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>



                            <TextView

                                android:id="@+id/stock1"
                                android:layout_weight="1"
                                android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>

                        </TableRow>



                        <TableRow

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/row2"
                            android:visibility="gone"
                            >

                            <TextView
                                android:text="2"
                                android:layout_height="39dp"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:layout_weight="1"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/weight_2"
                                android:layout_height="39dp"
                                android:layout_weight="1"
                                android:background="#dcdcdc"
                                android:gravity="center"
                                android:padding="5dip"
                                android:text=""
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/mrp2"
                                android:layout_height="39dp"
                                android:layout_weight="1"
                                android:background="#d3d3d3"
                                android:gravity="center"
                                android:padding="5dip"
                                android:text=""
                                android:textColor="#000000" />

                            <TextView

                                android:id="@+id/selling2"
                                android:layout_height="39dp"
                                android:layout_weight="1"
                                android:background="#cac9c9"
                                android:gravity="center"
                                android:padding="5dip"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/stock2"
                                android:layout_height="39dp"
                                android:layout_weight="1"
                                android:background="#cac9c9"
                                android:gravity="center"
                                android:padding="5dip"
                                android:text=""
                                android:textColor="#000000" />

                        </TableRow>


                        <TableRow
                            android:id="@+id/row3"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                            <TextView
                                android:text="3"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:layout_weight="1"
                                android:gravity="center"/>
                            <TextView
                                android:text=""
                                android:layout_weight="1" android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:id="@+id/weight_3"
                                android:padding="5dip" android:gravity="center"/>

                            <TextView
                                android:text=""
                                android:id="@+id/mrp3"
                                android:layout_weight="1" android:background="#d3d3d3"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>

                            <TextView

                                android:id="@+id/selling3"
                                android:layout_weight="1" android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>

                            <TextView
                                android:id="@+id/stock3"

                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#cac9c9"
                                android:gravity="center"
                                android:padding="5dip"
                                android:textColor="#000000" />

                        </TableRow>
                        <TableRow
                            android:id="@+id/row4"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <TextView
                                android:text="4"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip"
                                android:layout_weight="1"
                                android:gravity="center"/>
                            <TextView
                                android:text=""
                                android:id="@+id/weight_4"
                                android:layout_weight="1"
                                android:background="#dcdcdc"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>

                            <TextView
                                android:text=""
                                android:id="@+id/mrp4"
                                android:layout_weight="1" android:background="#d3d3d3"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>

                            <TextView

                                android:id="@+id/selling4"
                                android:layout_weight="1" android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>
                            <TextView
                                android:id="@+id/stock4"

                                android:layout_weight="1" android:background="#cac9c9"
                                android:textColor="#000000"
                                android:padding="5dip" android:gravity="center"/>

                        </TableRow>
                    </TableLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/add_cart_month"
                        android:paddingBottom="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/add_cart_bution_backround"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="     --"
                            android:textSize="20dp"
                            android:textColor="@color/colorAccent"
                            android:gravity="center_vertical"
                            android:id="@+id/minnu_month"
                            ></TextView>

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="   1"
                                android:textSize="20dp"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/quantity_month"
                                android:gravity="center_horizontal"
                                >

                            </TextView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="    +"
                            android:textSize="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorAccent"
                            android:id="@+id/add_month"
                            ></TextView>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="5dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:id="@+id/remove_bt"
                        android:foregroundGravity="right"
                        android:layout_gravity="right"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/remove_bt_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="55dp"
                                android:text="Remove"
                                android:textColor="#fff"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        app:cardBackgroundColor="@color/light_green_600"
                        app:cardCornerRadius="5dp"
                        android:padding="5dp"
                        android:id="@+id/edit_bt"
                        android:visibility="visible"
                        android:foregroundGravity="right"
                        android:layout_gravity="right"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/update_bt_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="55dp"
                                android:text="Update"
                                android:textColor="#fff"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/add_cart_quantity_bt"
                        android:paddingBottom="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/add_cart_bution_backround"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="     --"
                            android:textSize="20dp"
                            android:textColor="@color/colorAccent"
                            android:gravity="center_vertical"
                            android:id="@+id/minnu"
                            ></TextView>

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="   1"
                                android:textSize="20dp"
                                android:textColor="@color/colorAccent"
                                android:id="@+id/quantity"
                                android:gravity="center_horizontal"
                                >

                            </TextView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="    +"
                            android:textSize="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorAccent"
                            android:id="@+id/add"
                            ></TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>


