                    android:layout_height="match_parent"
                    android:text="Variation No"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/varition_no"

                    ></CheckBox>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


