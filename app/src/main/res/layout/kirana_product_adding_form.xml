                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:background="@drawable/edit_text"
                android:hint="Name Of Product"
                android:inputType="text"
                android:id="@+id/product_cetegory_name"
                ></EditText>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                 android:layout_margin="15dp"
                android:background="@drawable/edit_text"
                android:hint="Cost Price of product"
                android:inputType="textEmailAddress"
                android:id="@+id/cost_price"
                ></EditText>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="Market Price"
                 android:layout_margin="15dp"
                android:inputType="number"
                android:id="@+id/marketing_price"

                >


            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="Salling Price"
                 android:layout_margin="15dp"
                android:inputType="number"
                android:id="@+id/salling_price"
                >


            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="Stock"
                android:layout_margin="15dp"
                android:inputType="number"
                android:id="@+id/stock"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="Stock"
                 android:layout_margin="15dp"
                android:inputType="number"
