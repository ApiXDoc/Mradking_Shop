<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="visible"
        >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/men_wear"
        android:layout_marginTop="20dp"
        android:id="@+id/product_image"
        ></ImageView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:hint="Name Of Product"
        android:inputType="text"
        android:id="@+id/product_cetegory_name"
        ></EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:hint="Product Code"
            android:inputType="textEmailAddress"
            android:id="@+id/product_code"
            ></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:hint="Cost Price of product"
            android:inputType="textEmailAddress"
            android:id="@+id/cost_price"
            ></EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edit_text"
        android:hint="Market Price"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/marketing_price"

        >


    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edit_text"
        android:hint="Salling Price"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/salling_price"
        >


    </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:hint="Margin"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:id="@+id/margin"
            >


        </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edit_text"
        android:hint="Stock"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/stock"
        >
    </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:hint="Index"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:id="@+id/index"
            >
        </EditText>




    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <EditText
            android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="20"
            android:hint="product discreption"
            android:background="@drawable/edit_text"
            android:layout_marginTop="20dp"
            android:padding="10dp"
        android:layout_height="wrap_content"
            android:id="@+id/product_discription"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
            >
        </EditText>



        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:entries="@array/product_main_cetegory"
            android:id="@+id/product_main_cetegory_spinner"
            android:layout_marginTop="10dp"
            ></Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:entries="@array/your_code"
            android:id="@+id/product_type_code"
            android:layout_marginTop="10dp"
            ></Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:id="@+id/product_sub_cetegory_spinner"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:entries="@array/product_sub_cetegory"
            android:layout_marginTop="10dp"
            ></Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginTop="10dp"
            android:padding="8dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product in Different Size"
                android:textColor="#000000"

                ></TextView>

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/checkbox_for_product_size"
                ></CheckBox>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/size_panel"
            android:visibility="gone"
            >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:hint="size 1"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:id="@+id/size_1"
            >
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:hint="size 2"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:id="@+id/size_2"
            >
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:hint="size 3"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:id="@+id/size_3"
            >
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:hint="size 4"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:id="@+id/size_4"
            >
        </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="size 5"
                android:text="size5"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:id="@+id/size_5"
                >
            </EditText>



        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginTop="10dp"
            android:padding="8dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product in Different Color"
                android:textColor="#000000"

                ></TextView>

            <CheckBox
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/checkbox_for_product_color"
                ></CheckBox>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/size_panel2"
            android:visibility="gone"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">



                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ad_sub_product_img"
                    android:background="@drawable/edit_text"
                    android:id="@+id/pro_1_img"
                    ></ImageView>


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ad_sub_product_img"
                    android:background="@drawable/edit_text"
                    android:id="@+id/pro_2_img"
                    ></ImageView>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ad_sub_product_img"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_text"
                    android:id="@+id/pro_3_img"
                    ></ImageView>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ad_sub_product_img"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_text"
                    android:id="@+id/pro_4_img"
                    ></ImageView>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="total no of images"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:id="@+id/no_of_image"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="Color 1"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:id="@+id/color1"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="Color 2"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:id="@+id/color2"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="color 3"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:id="@+id/color3"
                >
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:hint="color 4"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:id="@+id/color4"
                >
            </EditText>




        </LinearLayout>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:id="@+id/ok"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Next"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>






















    </LinearLayout>



</LinearLayout>

</ScrollView>
